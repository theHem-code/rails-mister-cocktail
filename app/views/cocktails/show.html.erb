<div class="container">
  <h1><%= @cocktail.name %></h1>

  <p>
    <strong>Doses:</strong><%=  %>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>: <%= dose.ingredient.name %>
      </li>
    <% end %>
  </p>

  <div class="container">
      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
